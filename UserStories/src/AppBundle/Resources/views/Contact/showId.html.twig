{% extends 'base.html.twig' %}
{% block title %}
    Show contact
{% endblock %}
{% block body %}
    <a href="{{ path('app_contact_show')}}">Show all contacts</a>
    <div style="width: 25%" align="center">
        <h2>{{ contact.name }} {{ contact.surname }}</h2>
        <h3>{{ contact.description }}</h3>
    </div>
    <p>
        <a href="{{ path('app_contact_modify', {'id': contact.id}) }}">Edit</a>
        <a href="{{ path('app_contact_delete', {'id': contact.id}) }}">Delete</a>
    </p>
    <h4>Adresses:</h4>
    <ul>
        {% for address in contact.addresses %}
            <li> {{ address.city }},
                 {{ address.street }}
                 {{ address.houseNumber }}
                {% if address.apartmentNumber is not null %}
                /
                {% endif %}
                {{address.apartmentNumber }}
                <a href="{{ path('app_address_modify', {'id': address.id, 'id_c' : contact.id }) }}">Edit</a>
                <a href="{{ path('app_address_delete', {'id': address.id, 'id_c' : contact.id }) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_address_new', {'id': contact.id}) }}">Add address</a>

    <h4>Emails:</h4>
    <ul>
        {% for email in contact.emails %}
            <li>{{ email.email }}
                Type: {{ email.type }}
                <a href="{{ path('app_email_modify', {'id': email.id, 'id_c' : contact.id }) }}">Edit</a>
                <a href="{{ path('app_email_delete', {'id': email.id, 'id_c' : contact.id }) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_email_new', {'id': contact.id}) }}">Add email</a>

    <h4>Phones:</h4>
    <ul>
        {% for phone in contact.phones %}
            <li>{{ phone.number }}
                Type: {{ phone.type }}
                <a href="{{ path('app_phone_modify', {'id': phone.id, 'id_c' : contact.id }) }}">Edit</a>
                <a href="{{ path('app_phone_delete', {'id': phone.id, 'id_c' : contact.id }) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_phone_new', {'id': contact.id}) }}">Add phone</a>

{% endblock %}

